    <!-- Nav Bar -->

    <div class="fixed">
    <nav class="top-bar">
      <ul class="title-area">
        <li class="name">
          <h1><%= link_to "roomami", root_url %></a></h1>
        </li>
      </ul>
      <section class="top-bar-section">

        <% if current_user %>
        <ul class="center">
          <li class="divider"></li>
          <li><%= link_to "Home", welcome_path(current_user) %></li>
          <li class="divider"></li>
          <li><%= link_to "My Profile", user_path(current_user) %></li>
          <li class="divider"></li>
          <li><%= link_to "Houses", houses_url %></li>
          <li class="divider"></li>
          <li><%= link_to "Chores", chores_url %></li>
        </ul>
        <span style="float: right; margin-right: 20px"><font color=white>Welcome, <%= current_user.first_name %>!
        <%= link_to "Log out", logout_path %></font></span>

      <% else %>
        <span style="float: right"><%= link_to "Sign up", signup_path %> <font color= "#F2F2F2">or</font>
        <%= link_to "Log in", login_path %>.</span>
      <% end %>

     <div id="flash">
        <% if flash[:notice] %>
          <p id="notice"><%= flash[:notice] %></p>
        <% end %>
        <% if flash[:alert] %>
          <p id="alert"><%= flash[:alert] %></p>
        <% end %>
      </div>

        </section>
      </nav>
    </div>

