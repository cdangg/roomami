<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "roomami" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>


<% if current_user %>
    <!-- Nav Bar -->


  <div class="sticky" data-options="sticky_on: large">
  <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
        <li class="name">
          <% if current_user %>
          <h1><%= link_to "roomami", welcome_path(current_user) %></a></h1>
          <% else %>
          <h1><%= link_to "roomami", root_url %></a></h1>
        </li>
      </ul>
      <% end %>
      <section class="top-bar-section">


        <ul class="center">
          <li class="divider"></li>
          <li><%= link_to "Home", welcome_path(current_user) %></li>
          <li class="divider"></li>
          <li><%= link_to "My Profile", user_path(current_user) %></li>
          <li class="divider"></li>
          <li><%= link_to "Houses", houses_url %></li>
          <li class="divider"></li>
          <li><%= link_to "Chores", chores_url %></li>
        </ul>
        <span style="float: right; margin-right: 20px"><font color=white>Welcome, <%= current_user.first_name %>!
        <%= link_to "Log out", logout_path %></font></span>

      <% end %>

     <div id="flash">
        <% if flash[:notice] %>
          <p id="notice"><%= flash[:notice] %></p>
        <% end %>
        <% if flash[:alert] %>
          <p id="alert"><%= flash[:alert] %></p>
        <% end %>
      </div>

        </section>
      </nav>
    </div>

      <!-- End Nav


      <!- Main Page Content and Sidebar -->
      <div class="row">

        <!-- Main Blog Content -->
        <div class="main-container">
          <div class="large-12 columns" role="content">

            <%= yield %>

          </div>
        </div>

        <!-- End Main Content -->

      </div>
      <!-- End Main Content and Sidebar -->


      <!-- Footer -->

      <footer class="row">
        <div class="large-12 columns">
          <hr />
          <div class="row">
            <div class="large-6 columns">
              <p>Â© Roomami 2014</p>
            </div>
            <div class="large-6 columns">
              <ul class="inline-list right">
                <li><a href="#">About Us</a></li>
                <li><a href="#">FAQ</a></li>
                <li><a href="#">Blog</a></li>
                <li><a href="#">Contact Us</a></li>
              </ul>
            </div>
          </div>
        </div>
      </footer>




      <%= params %>


    <script>
      $(document).foundation();
    </script>





  </body>
</html>