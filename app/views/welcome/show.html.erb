<% if current_user && current_user.houses.any? %>
  <ul>
    <% current_user.houses.each do |h| %>
        <li><%= link_to h.name, welcome_path(house_id: h.id) %></li>
    <% end %>
  </ul>
<% end %>

 <div class="large-9 columns" role="content">
    <div class="panel">
    <h5>Current Chore List</h5>
      <% @house.chores.pending.each do |chore| %>
        <li> <%= chore.name %></li>
      <% end %>
    </div>
  <div class="panel">
    <h5>Completed Chores List</h5>
      <% @house.chores.complete.each do |chore| %>
        <li><%= chore.name %></li>
      <% end %>
  </div>
  <div class="panel">
    <h5>Miscellaneous</h5>
  </div>
</div>

  <!-- Sidebar -->

    <aside class="large-3 columns">

    <% if current_user %>
      <div class="panel">
        <% @comments.each do |comment|%>
          <%= comment.content %>
            <% if comment.user != nil %>
              <em>by <%= comment.user.first_name %></em>
            <% end %>
          <% end %>
        <h5>Notes</h5>
        <%= form_for(@comment) do |f|%>
          <% if @comment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this review from being saved</h2>
              <ul>
                <% @comment.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
           <% end %>
            <%= f.text_area :content %>
            <%= f.submit %>
        <% end %>
      <% else %>
        <p>Please <%= link_to "log in", new_session_path %>to add a review.</p>
      <% end %>
