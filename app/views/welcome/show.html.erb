<br />
Hi, <%=current_user.first_name%>!
<hr />
<div class="row">
  <div class="large-12 columns">
    <h2 class="subheader">Dashboard   <%= image_tag("dashboardpic.png", :size => "40x40") %></h2>
  </div>
</div>

<br>

<!-- sub nav -->
<% if current_user && current_user.houses.any? %>

  <dl id="user-house-list" class="sub-nav" data-active-id="<%= @house.id %>">
    <dt>You're view:</dt>
    <% current_user.houses.each_with_index do |h, i| %>
      <dd active><%= link_to h.name, welcome_path(house_id: h.id), data: { id: h.id }, class: 'house-tab' %></dd>
    <% end %>
  </dl>


<% end %>

<!-- End sub nav -->

<div class="large-9 columns" role="content">
    <div class="panel">
    <h5>Current Chore List</h5>
      <% @house.chores.pending.each do |chore| %>
        <li> <%= chore.name %></li>
      <% end %>
    </div>

  <div class="panel">
    <h5>Completed Chores List</h5>
      <% @house.chores.complete.each do |chore| %>
        <li><%= chore.name %> [<em>completed by <%= chore.user.first_name %></em>]</li>
      <% end %>
  </div>

    <div class="panel">
      <h5>Miscellaneous</h5>
    </div>
</div>

  <!-- Comments sidebar -->
    <aside class="large-3 columns">
    <% if current_user %>
      <div class="comments-panel">
        <h5 class="title">Say Something!</h5>
        <% @comments.each do |comment|%>
        <div class="comment">
          <%= comment.user.first_name %> says:
          <%= comment.content %>
        </div>
        <% end %>

        <%= form_for @comment, remote: true do |f| %>
          
          <br/>
          <%= f.hidden_field :house_id, value: @house.id %>
           <div class="field">
            <%= f.text_area :content %>
           </div>
           <div class="actions">
            <%= f.submit %>
           </div>
          <% end %>
        <% end %>
        <a href="#">Read More â†’</a>
      </div>

    </aside>

    <!-- End comment sidebar -->
